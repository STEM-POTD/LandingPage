generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Problem {
  id          String @id @default(cuid())
  title       String
  content     String
  answer      String
  explanation String
  solvedBy    User[]
}

model User {
  id        String    @id @default(cuid())
  name      String    @db.VarChar(255)
  email     String    @unique
  role      Role      @default(USER)
  password  String
  provider  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  score     Int       @default(0)
  solved    Problem[]
}

enum Role {
  ADMIN
  USER
}
